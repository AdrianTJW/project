<div class="travork">
	<div class="row">




<div class="column large-12 medium-12 small-12" style="padding-top: 75px;">
<n1>Travel Differently</n1>
</div>
<div class="column large-12 medium-12 small-12" style="padding-bottom: 75px;">
<n2>Define your life differently here.</n2>
</div>
</div>
<div class="row">
<div class="column large-4 medium-6 small-12">
<%= text_field_tag 'name', nil, placeholder: "What you want to do?"  %>
</div>
<div class="column large-4 medium-6 small-12">
	<div class="listings-search">
			<%= form_tag jobs_path, method: :get do %>
		<div class="form-group">
			<%= text_field_tag :query, params[:query], class: 'form-control', placeholder: "Where you want to go?",  autocomplete: "off" %>
			<% end %>
<!-- 		<div class="column large-4 small-12">
			<%= submit_tag 'Start your journey here!', class: 'primary button' %>
		</div> -->

	</div>
</div>


<% if current_user %>
	<%= link_to "View jobs", jobs_path %>
	<%= link_to "Log out - User", destroy_user_session_path ,method: :delete %>
<% elsif current_host %>
	<% if current_host.verify_status == true %>
		<%= link_to "Host jobs", new_job_path %>
	<% end %>
	<%= link_to "View jobs", jobs_path %>
	<%= link_to "Log out - Host", destroy_host_session_path ,method: :delete %>
<% end %>




	

