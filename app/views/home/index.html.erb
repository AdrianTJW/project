
<div class="travork">
	<div class="row">

<div class="column large-12 medium-12 small-12" style="padding-top: 75px;">
<n1>Travel Differently</n1>
</div>
<div class="column large-12 medium-12 small-12" style="padding-bottom: 75px;">
<n2>Define your life differently.</n2>
</div>
</div>
<div class="row">
	<div class="column large-4 medium-6 small-12">
		<%= text_field_tag 'name', nil, placeholder: "What you want to do?"  %>
	</div>
		<div class="listings-search">
			<%= form_tag jobs_path, method: :get do %>
			<div class="form-group">
				<div class="column large-4 medium-6 small-12">
					<%= text_field_tag :query, params[:query], class: 'form-control', id: 'country', placeholder: "Where you want to go?",  autocomplete: "off" %>
				</div>
			</div>
			<div class="column large-4 small-12">
				<%= submit_tag 'Start your journey here!', class: 'primary button' %>
			</div>
			<% end %>

		</div>
	</div>
</div>
	
<div class="row" style="max-width: 85%;">
	<div class="row">
	<div class="row">
		<n2 style="color: black; text-align:left;">Working holiday</n2>
	</div>
		<% @workholiday.last(3).each do |x| %>
		<div class="left column large-4 medium-4 small-12" style="max-width: 400px; max-height: 400px;">
		<%= link_to image_tag(x.images[0]), x %>
		</div>
		<% end %>
	</div>
	<div class="row">
		<div class="row">
		<n2 style="color: black; text-align:left;">Internship</n2>
	</div>
		<% @internship.last(3).each do |x| %>
		<div class="left column large-4 medium-4 small-12" style="max-width: 400px; max-height: 400px;">
		<%= link_to image_tag(x.images[0]), x %>
		</div>
		<% end %>
	</div>
	<div class="row">
	<div class="row">
		<n2 style="color: black; text-align:left;">Volunteering experience</n2>
	</div>
	<% @volunteer.last(3).each do |x| %>
		<div class="left column large-4 medium-4 small-12" style="max-width: 400px; max-height: 400px;">
		<%= link_to image_tag(x.images[0]), x %>
		</div>
		<% end %>
	</div>
	<div class="row">
	<div class="row">
		<n2 style="color: black; width: 80%;">World class bootcamp</n2>
	</div>
	<% @bootcamp.last(3).each do |x| %>
		<div class="left column large-4 medium-4 small-12" style="max-width: 400px; max-height: 400px;">
		<%= link_to image_tag(x.images[0]), x %>
		</div>
		<% end %>
	</div>
</div>
<br>
<br>



