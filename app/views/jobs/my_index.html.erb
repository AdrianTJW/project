<p id="notice"><%= notice %></p>

<h1>Listing Jobs</h1>

<table>
  <thead>
    <tr>
      <th>Company name</th>
      <th>Description</th>
      <th>Address</th>
      <th>Country</th>
      <th>City</th>
      <th>Type</th>
      <th>Job name</th>
      <th>Salary</th>
      <th>Images</th>
      <th>Start date</th>
      <th>End date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% byebug %>
    <% @jobs.each do |job| %>
      <tr>
        <td><%= job.company_name %></td>
        <td><%= job.description %></td>
        <td><%= job.address %></td>
        <td><%= job.country %></td>
        <td><%= job.city %></td>
        <td><%= job.type %></td>
        <td><%= job.job_name %></td>
        <td><%= job.salary %></td>
        <td>
          <% job.images.each do |x|%>
            <a href="<%= x.url %>"><%= image_tag x.url %></a>
          <% end %>
        </td>
        <td><%= job.start_date %></td>
        <td><%= job.end_date %></td>
        <td><%= link_to 'Show', job %></td>
        <td><%= link_to 'Edit', edit_job_path(job) %></td>
        <td><%= link_to 'Destroy', job, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'Post job', new_job_path %>
