<%# add navigation links to this file %>
<% if current_user %>
	<%= link_to "Log out - User", destroy_user_session_path ,method: :delete %>
<% elsif current_host %>
	<% if current_host.verify_status == true %>
		<%= link_to "Host jobs", new_job_path %>
	<% end %>
	<%= link_to "Log out - Host", destroy_host_session_path ,method: :delete %>
<% elsif current_admin %>
